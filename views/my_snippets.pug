extends layout

block layout-content
  main 
    div.centred
      h1 My sinppets
    div.centred.padded
      div
        div.centred
          button#addbtn(onclick='window.location="/snippet/add"') ADD
        ul#list
        each val in snippets
          //- li= val.name
          p.singlerow
            label#name #{val.name} 
            //- a(href="/snippets/"+val.name) #{val.name} 
            label#author by #{val.user}
            label#hashtag #
            button#viewbtn(onclick='window.location="/snippets/'+val._id+'"') VIEW
            button#editbtn(onclick='window.location="/snippet/edit/'+val._id+'"') EDIT
        else
          p.singlerow
            | There are no snippets
