extends layout

block layout-content
  main 
    div.centred
      h1 My notes
    div.centred.padded
      div
        div.centred
          button#addbtn(onclick='window.location="/note/add"') ADD
        ul#list
        each val in notes
          //- li= val.name
          p.singlerow
            label#name #{val.namenotes} 
            //- a(href="/snippets/"+val.name) #{val.name} 
            label#author by #{val.nameusers}
            label#hashtag ##{val.category}
            button#viewbtn(onclick='window.location="/notes/'+val.idnotes+'"') VIEW
            button#editbtn(onclick='window.location="/note/edit/'+val.idnotes+'"') EDIT
            button#sharebtn(onclick='window.location="/notes/share/'+val.idnotes+'"') SHARE
        else
          p.singlerow.red
            | There are no notes